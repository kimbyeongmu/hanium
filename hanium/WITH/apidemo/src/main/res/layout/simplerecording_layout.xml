<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07b2e6">

    <Button
        android:id = "@+id/button_startVideo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Start Recording"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:background="#52e2f5" />

    <Button android:id = "@+id/button_stopVideo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Stop Recording"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:background="#52e2f5" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/button_recordingStatus"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Recording Status"
            android:textColor="#ffffff"
            android:background="#52e2f5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/button_liveSnapShot"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/button_recordingStatus"
            android:text="Live Snap Shot"
            android:textColor="#ffffff"
            android:background="#52e2f5" />
    </RelativeLayout>
</LinearLayout>