<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07b2e6">
    <Button
        android:id="@+id/button_overap_connect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="connect OVERAP"
        android:background="#52e2f5"
        android:textColor="#ffffff" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SoftAP IPAddress:"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/overap_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="SSID"
        android:textColor="#ffffff" />
    <EditText
        android:id="@+id/overap_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="SSID_PASSWD"
        android:textColor="#ffffff" />
</LinearLayout>